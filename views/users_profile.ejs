<link rel="stylesheet" href="/css/users_profile.css">

<img src="<%= user.avatar %>" alt="<%= user.name %>" width="100">

<% if(user.id == profile_user.id) {%>
    <form action="/users/update/<%= profile_user.id %>" method="POST" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Your New Name" value="<%= profile_user.name %>">
        <input type="email" name="email" placeholder="Your New Email" value="<%= profile_user.email %>">
        <input type="file" name="avatar" placeholder="Profile Picture">
        <input type="submit" name="submit" value="update" id="">
    </form>    
<%} else {%>
    <p> <%= profile_user.name %></p>
    <p> <%= profile_user.email %></p>
<%}%>